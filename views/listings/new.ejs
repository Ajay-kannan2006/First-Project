<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
   
    
        <div class="col-5 offset-3">
            <h1>Add new hotel here:</h1>
    <form method="post" action="/listing">
        <div class="mb-3">
            <label for="title" class="form-label"> Title</label>
            <input type="text" placeholder="Enter title" name="data[title]" class="form-control">
        </div>
        <div  class="mb-3">
            <label for="description" class="form-label"> Description</label>
            <textarea type="text"
             placeholder="Enter description" name="data[description]" class="form-control"></textarea>
        </div>
        <div  class="mb-3">
            <label for="price" class="form-label"> Price</label>
            <input type="number" placeholder="Enter price" name="data[price]"class="form-control">
        </div>
        <div  class="mb-3">
            <label for="image" class="form-label"> Image URL</label>
            <input type="text" placeholder="Enter image link" name="data[image[url]]"class="form-control">
        </div>
        <div  class="mb-3">
            <label for="country" class="form-label"> Country</label>
            <input type="text" placeholder="Enter country" name="data[country]"class="form-control">
        </div>
        <div  class="mb-3">
            <label for="location" class="form-label"> Location</label>
            <input type="text" placeholder="Enter location" name="data[location]"class="form-control">
        </div>
 
        <button class="btn btn-dark add">submit</button>
    </form>
</div>
    </div>
</body>
